<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource name="BeanManager" auth="Container"
		type="javax.enterprise.inject.spi.BeanManager" factory="org.jboss.weld.resources.ManagerObjectFactory" />

	<!-- Config DataSource - Local development -->
	<Resource name="jdbc/MySQLDS" auth="Container"
		factory="org.apache.naming.factory.BeanFactory" type="com.mchange.v2.c3p0.ComboPooledDataSource"
		driverClass="com.mysql.jdbc.Driver"
		jdbcUrl="jdbc:mysql://localhost:3306/webpedidos?serverTimezone=UTC"
		user="root" password="" minPoolSize="2" maxPoolSize="3" />
</Context>
